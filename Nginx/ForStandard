server {
	server_name web.yam.com; 

	access_log /home/log/nginx/web.yam.com/access.log;
        error_log /home/log/nginx/web.yam.com/error.log;

	root /home/www/web.yam.com/www;

	location / {
		index index.php index.html index.htm;
	}

	location ~ [^/]\.php(/|$) {
		fastcgi_split_path_info ^(.+?\.php)(/.*)$;
		if (!-f $document_root$fastcgi_script_name) {
		return 404;
		}
 
		fastcgi_pass 127.0.0.1:9000;
		fastcgi_index index.php;
		include fastcgi_params;
	}
}
